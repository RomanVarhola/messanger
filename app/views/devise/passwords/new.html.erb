<% provide(:title, (t 'passwords.new.recovery_pass')) %>
<% provide(:pageid, 'sign_up') %>

<div class="col-lg-1">
</div>
<div class="col-lg-10">
<div class="jumbotron jumbotron-default text-center center">
  <div class="container">
    <h1><%= t 'passwords.new.recovery_pass' %></h1>
  <%= devise_error_messages! %>

<%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :url => password_path(resource_name), :html => { method: :post }) do |f| %>
<div class="row">
<div class="col-lg-2">
</div>
<div class="col-lg-8">
<table class="table text-left">
	<tr>
		<td class="col-md-4">Email</td>
		<td><%= f.text_field :email, autofocus: true, class: "form-control" %></td>
	</tr>
</table>
</div>
<div class="col-lg-1">
</div>
</div>
  <div class="control-group">
    <div class="error"></div>
      <%= f.submit (t 'passwords.new.recover'), class: "btn btn-lg btn-primary" %><br/><%= render "devise/shared/links" %>
  </div>
    <% end %>
  </div>
</div>
</div>
<div class="col-lg-1">
</div>
