<div class='col-lg-1'></div>
<div class="col-lg-10">
  <div class="jumbotron jumbotron-default text-center center">
    <div class="container">
      <h1><%= t 'registrations._main_form_mindpower.create_account' %></h1>
      <%= devise_error_messages! %>

      
      <% unless cookies[:new_user_id] %>
      <%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <table class="table text-left">
            <tr>
              <td class="col-md-4">Email</td>
              <td><%= f.text_field :email, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="col-md-4">Password</td>
              <td><%= f.password_field :password, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="col-md-4">Password confirmation</td>
              <td><%= f.password_field :password_confirmation, class: "form-control" %></td>
            </tr>
            <tr>
              <td>First name</td>
              <td><%= f.text_field :first_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>Last name</td>
              <td><%= f.text_field :last_name, class: "form-control" %></td>
            </tr>
            <tr>
              <td>City</td>
              <td><%= f.text_field :city, class: "form-control" %></td>
            </tr>
          </table>
        </div>
        <div class="col-lg-1"></div>
      </div>
      <div class="control-group">
        <div class="error"></div>
        <%= f.submit 'Sing up', class: "btn btn-teal btn-lg" %>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>
<div class="col-lg-1"></div>
