<% provide(:title, (t 'sessions.new.signin_to_acc')) %>
<% provide(:pageid, 'sign_up') %>

<div class="col-lg-1"></div>
<div class="col-lg-10">
  <div class="jumbotron jumbotron-default text-center center">
    <div class="container">

      <%= render 'devise/shared/from_session' %>

      <h1>Sign in</h1>
      <%= devise_error_messages! %>

      <%= form_for(resource, :html => {:class => "form-horizontal"}, :as => resource_name, :url => new_user_session_path) do |f| %>
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <table class="table text-left">
            <tr>
              <td class="col-md-4">Email</td>
              <td><%= f.text_field :email, autofocus: true, class: "form-control" %></td>
            </tr>
            <tr>
              <td class="col-md-4">Password</td>
              <td><%= f.password_field :password, autocomplete: "off", class: "form-control" %></td>
            </tr>
          </table>
        </div>
        <div class="col-lg-1"></div>
      </div>
      <div class="control-group">
        <div class="error"></div>
        <%= f.submit 'Sign in', class: "btn btn-lg btn-danger" %><br/>
        <%= render "devise/shared/links" %>
      </div>
      <% end %>
    </div>
  </div>
</div>
<div class="col-lg-1"></div>
