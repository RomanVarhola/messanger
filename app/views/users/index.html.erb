<%= link_to 'Create', new_user_path, class: 'btn btn-success' %>

<h1>Users</h1>
<table class="table table-bordered">
  <thead>
  <tr class="info">
    <th>#</th>
    <th>Full name</th>
    <th>Email</th>
    <th>City</th>
    <th>Blocked</th>
    <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.id %></td>
      <td><%= user.full_name %></td>
      <td><%= user.email %></td>
      <td><%= user.city %></td>
      <td><%= user.blocked if current_user != user %></td>
      <td>
      <% if current_user != user %>
        <%= link_to 'Show', user, class: 'btn btn-success' %>
        <%= link_to 'Edit', edit_user_path(user), class: 'btn btn-primary' %>
        <% if user.blocked? %>
          <%= link_to 'UnBlock', unblock_user_path(user), method: :post, class: 'btn btn-warning' %>
        <% else %>
          <%= link_to 'Block', block_user_path(user), method: :post, class: 'btn btn-warning' %>
        <% end %>
        <%= link_to 'Remove', user, method: :delete, data: { confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
      <%end%>  
      </td>
      </tr>
    <% end %>
  </tbody>
</table>
