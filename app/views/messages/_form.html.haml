.row
  .col-md-6.col-md-offset-3
    = form_for message do |f|
      - if message.errors.any?
        .alert.alert-danger
          %ul
            - message.errors.full_messages.each do |msg|
              %li= msg
      .panel.panel-primary
        .panel-heading Fill fields
        .panel-body
          .control-group
            = f.hidden_field :sender_id, value: current_user.id
            = f.label :body
            .controls
              = f.text_field :body, value: 'Body', class: 'form-control'
          .control-group
            = f.label :description
            .controls
              = f.text_area :description, class: 'form-control'
          .control-group
            = f.label :receiver
            .controls
              = f.collection_select :receiver_id, User.all.where.not(id: current_user.id), :id, :full_name, html_options: { class: 'form-control'}
      .panel.panel-primary
        .panel-body
          = f.submit 'Send', class: "btn btn-lg btn-teal"